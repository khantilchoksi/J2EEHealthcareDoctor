<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khantilchoksi.j2eehealthcaredoctor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.MyProfileActivity"
            android:label="@string/title_activity_my_profile"
            android:launchMode="singleTop"
            android:parentActivityName="com.khantilchoksi.j2eehealthcaredoctor.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.AddExistingClinicsActivity"
            android:label="@string/title_activity_add_existing_clinics"
            android:launchMode="singleTop"
            android:parentActivityName="com.khantilchoksi.j2eehealthcaredoctor.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.khantilchoksi.j2eehealthcaredoctor.HomeActivity" />
        </activity>
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.ShowClinicsActivity"
            android:label="@string/title_activity_show_clinics"
            android:parentActivityName="com.khantilchoksi.j2eehealthcaredoctor.AddExistingClinicsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.khantilchoksi.j2eehealthcaredoctor.AddExistingClinicsActivity" />
        </activity>
        <activity
            android:name="com.khantilchoksi.j2eehealthcaredoctor.AddClinicTimeSlotsActivity"
            android:label="@string/title_activity_add_clinic_time_slots"
            android:parentActivityName="com.khantilchoksi.j2eehealthcaredoctor.ShowClinicsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.khantilchoksi.j2eehealthcaredoctor.ShowClinicsActivity" />
        </activity>
    </application>

</manifest>